all: $(NAME)

$(NAME): $(OBJ)
	@ ar rcs $(NAME) $(OBJ)
	@ echo $(KITTY)
	@ echo "---<3--- Successful compilation ---<3---"

clean:
	@ rm -fr $(OBJ)
	@ echo "---<3--- Deleted object files ---<3---"

fclean: clean
	@ rm -f $(NAME)

re: fclean run

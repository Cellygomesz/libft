all: $(NAME)

$(NAME): $(OBJ)
	@ ar rcs $(NAME) $(OBJ)
	@ echo $(KITTY)
	@ echo "$(GREEN)---<3--- Successful compilation âœ… ---<3---$(RESET)"

clean:
	@ rm -fr $(OBJ)
	@ echo $(TRASH)
	@ echo "$(GREEN)---<3--- Deleted object files âœ… ---<3---$(RESET)"

fclean: clean
	@ rm -f $(NAME)

re: fclean run
